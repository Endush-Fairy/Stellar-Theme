<h2>Have a Question?</h2>

<form action="process_form.php" method="post">
    <label for="name">Name*</label><br>
    <input type="text" name="name" id="name" required><br><br>

    <label for="email">Email*</label><br>
    <input type="email" name="email" id="email" required><br><br>

    <label for="phone">Phone*</label><br>
    <select name="country_code" required>
        {{#country_codes}}
            <option value="{{value}}">{{label}}</option>
        {{/country_codes}}
    </select>
    <input type="tel" name="phone" id="phone" required><br><br>

    <label for="program">Select a Program*</label><br>
    <select name="program" id="program" required>
        <option value=""></option>
        {{#programs}}
            <option value="{{.}}">{{.}}</option>
        {{/programs}}
    </select><br><br>

    <label for="campus">Select Campus*</label><br>
    <select name="campus" id="campus" required>
        <option value=""></option>
        {{#campuses}}
            <option value="{{.}}">{{.}}</option>
        {{/campuses}}
    </select><br><br>

    <label for="message">Message</label><br>
    <textarea name="message" id="message" rows="5"></textarea><br><br>

    <label>
        <input type="checkbox" name="agree" required> By submitting this form, you agree to our
        <a href="https://stellarcollege.edu/terms-and-policies" style="text-decoration:none;color:black;font-weight:bold;text-decoration:underline;">Terms and Policies</a>
        regarding the collection and use of your personal information.
    </label><br><br>

    {{{ recaptcha }}}

    <button type="submit">Submit</button>
</form>
