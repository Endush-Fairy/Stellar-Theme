    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const navToggle = document.getElementById('nav-toggle');
            const navLinks = document.querySelector('.nav-links');
            const searchContainer = document.getElementById('search-container');
            const searchToggleBtn = document.getElementById('search-toggle-btn');
            const searchInput = document.getElementById('search-input');

            navToggle.addEventListener('click', () => {
                navLinks.classList.toggle('active');
                navToggle.classList.toggle('active');
            });

            document.querySelectorAll('.main-nav .dropdown > a').forEach(link => {
                link.addEventListener('click', function (e) {
                    if (window.innerWidth <= 992) {
                        const parentLi = this.parentElement;
                        if (parentLi.querySelector('.dropdown-menu')) {
                            e.preventDefault();
                            parentLi.classList.toggle('active');
                            parentLi.parentElement.querySelectorAll('.dropdown').forEach(other => {
                                if (other !== parentLi) other.classList.remove('active');
                            });
                        }
                    }
                });
            });

            searchToggleBtn.addEventListener('click', (e) => {
                e.stopPropagation();
                searchContainer.classList.toggle('active');
                if (searchContainer.classList.contains('active')) {
                    setTimeout(() => searchInput.focus(), 100);
                }
            });

            document.addEventListener('click', (e) => {
                if (searchContainer.classList.contains('active') && !searchContainer.contains(e.target)) {
                    searchContainer.classList.remove('active');
                }
            });
        });
    </script>
